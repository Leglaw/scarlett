{
	"git": {
		"commitMessage": "Release draft v${version}",
		"requireCleanWorkingDir": true,
		"tagAnnotation": "Release v${version}",
		"tagName": "${version}"
	},
	"github": {
		"assets": [
			"lib/*.*",
			"logo.jpg",
			"README.md"
		],
		"draft": true,
		"release": true,
		"releaseName": "v${version}"
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"before:init": [ "yarn run build", "yarn run build:es3", "yarn run build:declarations" ],
		"after:bump": "npm run test",
		"after:release": "echo Successfully created a release draft v${version} for ${repo.repository}. Please add release notes when necessary and publish it!"
	}
}